---
import PopoverMessage from "./PopoverMessage";
import { messages } from "src/utils/constants";
// get url params
const url = Astro.url;
const params = url.searchParams;
const messageTo = params.get("message-to") || "";

// check if messageTo is in constants file
const message = messages[messageTo] || null;
// get message from constants file
---

{
  message && (
    <PopoverMessage
      client:visible
      message={message}
    />
  )
}
